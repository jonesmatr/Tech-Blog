<h2>{{post.title}}</h2>
<p>{{post.content}}</p>

<h3>Comments:</h3>
<ul>
    {{#each comments}}
    <li>
        <strong>{{this.username}}</strong>
        <p>{{this.content}}</p>
    </li>
    {{/each}}
</ul>

<h3>Add a Comment:</h3>
<form action="/post/{{post.id}}/comment" method="post">
    <textarea name="content" required></textarea>
    <button type="submit">Submit Comment</button>
</form>
