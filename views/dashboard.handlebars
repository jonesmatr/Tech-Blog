<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Dashboard</title>
    <!-- Link to your styles.css file -->
    <link rel="stylesheet" href="/css/styles.css">
</head>

<h2>Your Dashboard</h2>

<ul>
    {{#each posts}}
    <li>
        <strong>{{this.title}}</strong>
        <a href="/dashboard/edit/{{this.id}}">Edit</a>
        <a href="/dashboard/delete/{{this.id}}">Delete</a>
    </li>
    {{/each}}
</ul>

<!-- Create New Post button -->
<button id="create-new-post-button">Create New Post</button>

<!-- New Post Form (hidden by default) -->
<div id="new-post-form" class="hidden">
  <form action="/api/posts" method="post">
    <label for="post-title">Title:</label>
    <input type="text" id="post-title" name="title" required>
    
    <label for="post-contents">Contents:</label>
    <textarea id="post-contents" name="content" required></textarea>
    
    <button type="submit">Create Post</button>
  </form>
</div>



<script src="/js/script.js"></script>