<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Dashboard</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>

<h2>Your Dashboard</h2>

<ul>
    {{#each posts}}
    <li>
        <strong>{{this.title}}</strong> ({{format_date this.date_created}})
        <a href="/dashboard/edit/{{this.id}}" class="edit-button" data-id="{{this.id}}">Edit</a>
        <a href="#" class="delete-button" data-id="{{this.id}}">Delete</a>
    </li>
    {{/each}}
</ul>

<!-- Create New Post button -->
<button id="create-new-post-button">Create New Post</button>

<!-- New Post Form (hidden by default) -->
<div id="new-post-form" class="hidden">
  <form action="/api/posts/create" method="post">
    <label for="post-title">Title:</label>
    <input type="text" id="post-title" name="title" required>
    <label for="post-contents">Contents:</label>
    <textarea id="post-contents" name="content" required></textarea>
    <button type="submit">Create Post</button>
  </form>
</div>

<div id="edit-form-container">
  <!-- Form will be inserted here -->
</div>


<script src="/js/script.js"></script>

</body>
</html>

